<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fillViewport="true" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="vertical"
		android:paddingBottom="@dimen/padding_standard"
		android:paddingLeft="@dimen/padding_extra"
		android:paddingRight="@dimen/padding_extra"
		android:paddingTop="@dimen/padding_standard" >

		<TextView
			style="@style/Text.Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/username" />

		<AutoCompleteTextView
			android:id="@+id/log_player_username"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:completionThreshold="1"
			android:dropDownHeight="wrap_content"
			android:hint="@string/username"
			android:imeOptions="actionNext"
			android:inputType="text"
			android:maxLength="63"
			android:textColor="#000" />

		<TextView
			style="@style/Text.Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/player_name" />

		<EditText
			android:id="@+id/log_player_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/player_name"
			android:inputType="textPersonName|textCapWords"
			android:maxLength="255" />

		<TextView
			android:id="@+id/log_player_team_color_label"
			style="@style/Text.Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/team_color" />

		<AutoCompleteTextView
			android:id="@+id/log_player_team_color"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:completionThreshold="1"
			android:dropDownHeight="wrap_content"
			android:hint="@string/team_color"
			android:imeOptions="actionNext"
			android:inputType="textCapSentences"
			android:maxLength="32"
			android:textColor="#000" />

		<RelativeLayout
			android:id="@+id/log_player_position_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:id="@+id/log_player_position_label"
				style="@style/Text.Label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_toLeftOf="@+id/log_player_position_button"
				android:text="@string/starting_position" />

			<EditText
				android:id="@+id/log_player_position"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_below="@+id/log_player_position_label"
				android:layout_toLeftOf="@+id/log_player_position_button"
				android:hint="@string/starting_position"
				android:imeOptions="flagNoExtractUi"
				android:inputType="numberDecimal|numberSigned"
				android:maxLength="32" />

			<Button
				android:id="@+id/log_player_position_button"
				style="@style/Text.Footnote"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:text="@string/number_to_text" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/log_player_score_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:id="@+id/log_player_score_label"
				style="@style/Text.Label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_toLeftOf="@+id/log_player_score_button"
				android:text="@string/score" />

			<EditText
				android:id="@+id/log_player_score"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_below="@+id/log_player_score_label"
				android:layout_toLeftOf="@+id/log_player_score_button"
				android:hint="@string/score"
				android:imeOptions="flagNoExtractUi"
				android:inputType="numberDecimal|numberSigned"
				android:maxLength="32" />

			<Button
				android:id="@+id/log_player_score_button"
				style="@style/Text.Footnote"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:text="@string/number_to_text" />
		</RelativeLayout>

		<TextView
			android:id="@+id/log_player_rating_label"
			style="@style/Text.Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/rating" />

		<EditText
			android:id="@+id/log_player_rating"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/rating_hint"
			android:inputType="numberDecimal"
			android:maxLength="8" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="@dimen/padding_small" >

			<CheckBox
				android:id="@+id/log_player_new"
				style="@style/Text.CheckboxLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/new_label" />

			<CheckBox
				android:id="@+id/log_player_win"
				style="@style/Text.CheckboxLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/win" />
		</LinearLayout>
	</LinearLayout>

</ScrollView>