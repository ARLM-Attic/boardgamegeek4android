<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout android:orientation="vertical"
		android:padding="10sp" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:id="@+id/statsRank" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" />
			<TextView android:id="@+id/statsRatingCount"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:gravity="right" />
		</LinearLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/averageBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/averageText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/averageBar" android:layout_alignBottom="@id/averageBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/bayesBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/bayesText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/bayesBar" android:layout_alignBottom="@id/bayesBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/medianBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/medianText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/medianBar" android:layout_alignBottom="@id/medianBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/stdDevBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/stdDevText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/stdDevBar" android:layout_alignBottom="@id/stdDevBar" />
		</RelativeLayout>
		<View android:layout_width="fill_parent" android:layout_height="1sp"
			android:layout_marginTop="10sp" android:background="@android:drawable/divider_horizontal_dark" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="@string/weight" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" />
			<TextView android:id="@+id/statsWeightCount"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:gravity="right" />
		</LinearLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/weightBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/weightText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/weightBar" android:layout_alignBottom="@id/weightBar" />
		</RelativeLayout>
		<View android:layout_width="fill_parent" android:layout_height="1sp"
			android:layout_marginTop="10sp" android:background="@android:drawable/divider_horizontal_dark" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="@string/users" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" />
			<TextView android:id="@+id/usersCount" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:gravity="right" />
		</LinearLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/owningBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/owningText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/owningBar" android:layout_alignBottom="@id/owningBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/ratingBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/ratingText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/ratingBar" android:layout_alignBottom="@id/ratingBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/tradingBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/tradingText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/tradingBar" android:layout_alignBottom="@id/tradingBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/wantingBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/wantingText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/wantingBar" android:layout_alignBottom="@id/wantingBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/wishingBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/wishingText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/wishingBar" android:layout_alignBottom="@id/wishingBar" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="2px">
			<ProgressBar android:id="@+id/weightingBar"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="20sp" />
			<TextView android:id="@+id/weightingText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#000" android:gravity="center"
				android:layout_alignTop="@id/weightingBar"
				android:layout_alignBottom="@id/weightingBar" />
		</RelativeLayout>
	</LinearLayout>
</ScrollView>
