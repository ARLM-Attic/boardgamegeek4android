<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:padding="@dimen/padding_extra" >

		<TextView
			android:id="@+id/rating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textStyle="bold" />

		<RatingBar
			android:id="@+id/rating_stars"
			style="?android:attr/ratingBarStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:isIndicator="true"
			android:numStars="10"
			android:stepSize="0.01" />

		<TextView
			android:id="@+id/number_rating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/light_text"
			android:textSize="@dimen/text_size_tiny" />

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TableRow>

				<TextView
					android:id="@+id/rank"
					style="@style/game_info_table"
					android:drawableLeft="@drawable/info_trophy"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/year_published"
					style="@style/game_info_table"
					android:drawableLeft="@drawable/info_calendar" />
			</TableRow>

			<TableRow>

				<TextView
					android:id="@+id/playing_time"
					style="@style/game_info_table"
					android:drawableLeft="@drawable/info_clock" />

				<LinearLayout
					android:layout_weight="1"
					android:orientation="horizontal" >

					<ImageButton
						android:id="@+id/num_of_players_button"
						style="@style/game_info_button"
						android:contentDescription="@string/num_of_players"
						android:onClick="onClick"
						android:src="@drawable/info_users" />

					<TextView
						android:id="@+id/num_of_players"
						style="@style/game_info_button_text" />
				</LinearLayout>
			</TableRow>

			<TableRow>

				<LinearLayout
					android:layout_weight="1"
					android:orientation="horizontal" >

					<ImageButton
						android:id="@+id/suggested_ages_button"
						style="@style/game_info_button"
						android:contentDescription="@string/suggested_playerage"
						android:onClick="onClick"
						android:src="@drawable/info_user" />

					<TextView
						android:id="@+id/suggested_ages"
						style="@style/game_info_button_text" />
				</LinearLayout>

				<LinearLayout
					android:layout_weight="1"
					android:orientation="horizontal" >

					<ImageButton
						android:id="@+id/languges_button"
						style="@style/game_info_button"
						android:contentDescription="@string/language_dependence"
						android:onClick="onClick"
						android:src="@drawable/info_mouth" />

					<TextView
						style="@style/game_info_button_text"
						android:text="@string/language" />
				</LinearLayout>
			</TableRow>
		</TableLayout>

		<WebView
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/updated"
				style="@style/game_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@color/light_text"
				android:textSize="@dimen/text_size_tiny" />

			<TextView
				android:id="@+id/game_id"
				style="@style/game_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:textColor="@color/light_text"
				android:textSize="@dimen/text_size_tiny" />
		</LinearLayout>
	</LinearLayout>

</ScrollView>