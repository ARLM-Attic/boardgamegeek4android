<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="6dip"
	android:minHeight="?android:attr/listPreferredItemHeight">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1">
		<TextView android:id="@+id/name" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center_vertical" />
		<TextView android:id="@+id/year" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>
	<ImageView android:id="@+id/listThumbnail" android:scaleType="fitEnd"
		android:layout_width="200dip" android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_gravity="right" android:paddingLeft="10dip"
		android:layout_weight="1" />
</LinearLayout>
