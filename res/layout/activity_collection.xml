<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@+id/filter_linear_layout"
		android:orientation="vertical" >

		<include layout="@layout/titlebar" />

		<include layout="@layout/list" />
	</LinearLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/background_light_transparent_2" >

		<include
			android:id="@+id/collection_info_header"
			layout="@layout/header_divider" />

		<TextView
			android:id="@+id/collection_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/collection_info_header"
			android:paddingRight="@dimen/padding_standard"
			android:textSize="@dimen/text_size_tiny"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/collection_sort"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/collection_count"
			android:paddingRight="@dimen/padding_standard"
			android:textSize="@dimen/text_size_tiny"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/filter_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/collection_sort"
			android:layout_alignTop="@id/collection_count"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/padding_standard"
			android:textSize="@dimen/text_size_small"
			android:textStyle="bold" />

		<HorizontalScrollView
			android:id="@+id/filter_scroll_view"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/filter_name"
			android:scrollbars="none" >

			<LinearLayout
				android:id="@+id/filter_linear_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal" />
		</HorizontalScrollView>
	</RelativeLayout>

	<!-- This TextView is used to show the first letter of the item at the top of the list during fast scrolling. -->

	<TextView
		android:id="@+id/fast_scroll_letter"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignTop="@id/filter_scroll_view"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@drawable/text_view_border"
		android:gravity="center_vertical|center_horizontal"
		android:text=""
		android:textSize="@dimen/text_size_huge"
		android:visibility="invisible" />

</RelativeLayout>