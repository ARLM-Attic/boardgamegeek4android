<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout android:orientation="vertical"
		android:padding="10dip" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Original BGG page" android:paddingTop="6dip" />
		<TextView android:id="@+id/bggGameLink" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
			android:autoLink="web" />
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:layout_marginTop="10dip" android:background="@android:drawable/divider_horizontal_dark" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="BoardGamePrices search" android:paddingTop="6dip" />
		<TextView android:id="@+id/bgPricesLink"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:autoLink="web" />
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:layout_marginTop="10dip" android:background="@android:drawable/divider_horizontal_dark" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Amazon search" android:paddingTop="6dip" />
		<TextView android:id="@+id/amazonLink" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
			android:autoLink="web" />
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:layout_marginTop="10dip" android:background="@android:drawable/divider_horizontal_dark" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="eBay search" android:paddingTop="6dip" />
		<TextView android:id="@+id/ebayLink" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall"
			android:autoLink="web" />
	</LinearLayout>
</ScrollView>
