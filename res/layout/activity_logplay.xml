<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout style="@style/TitleBar">
		<ImageView style="@style/TitleBarLogo"
			android:contentDescription="@string/description_logo"
			android:src="@drawable/title_logo"
			android:onClick="onHomeClick" />

		<TextView style="@style/TitleBarText" />

		<ImageButton style="@style/TitleBarAction"
			android:contentDescription="@string/description_search"
			android:src="@drawable/ic_title_search"
			android:onClick="onSearchClick" />
	</LinearLayout>

	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:gravity="top" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="5dip">
			<TableLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:stretchColumns="1">
				<TableRow>
					<TextView android:text="@string/date"
						android:padding="5dip"
						android:textAppearance="?android:attr/textAppearanceMedium" />
					<Button android:id="@+id/logDateButton"
						android:text=""
						android:gravity="left|center_vertical"
						onDateClick="onDateClick" />
				</TableRow>
				<TableRow>
					<TextView android:text="@string/quantity" android:padding="5dip"
						android:textAppearance="?android:attr/textAppearanceMedium" />
					<EditText android:id="@+id/logQuantity" android:text="1"
						android:inputType="number" android:hint="@string/quantityHint" />
				</TableRow>
				<TableRow>
					<TextView android:text="@string/length" android:padding="5dip"
						android:textAppearance="?android:attr/textAppearanceMedium" />
					<EditText android:id="@+id/logLength" android:text=""
						android:inputType="number" android:hint="@string/lengthHint" />
				</TableRow>
				<TableRow>
					<TextView android:text="@string/location" android:padding="5dip"
						android:textAppearance="?android:attr/textAppearanceMedium" />
					<EditText android:id="@+id/logLocation" android:text=""
						android:inputType="text" android:hint="@string/locationHint" />
				</TableRow>
				<CheckBox android:id="@+id/logIncomplete" android:text="@string/incomplete"
					android:checked="false" />
				<CheckBox android:id="@+id/logNoWinStats" android:text="@string/noWinStats"
					android:checked="false" />
				<TextView android:text="@string/comments" android:padding="5dip"
					android:textAppearance="?android:attr/textAppearanceMedium" />
				<EditText android:id="@+id/logComments" android:text=""
					android:inputType="textMultiLine|textAutoCorrect" android:hint="@string/commentsHint" />
			</TableLayout>
			
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<Button android:id="@+id/logPlaySaveButton"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/save"
					android:enabled="false"
					android:onClick="onSaveClick" />
				<Button android:id="@+id/logPlayCancelButton"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/cancel"
					android:onClick="onCancelClick" />
			</LinearLayout>
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>