<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Base application theme is the default theme. -->
	<style name="Theme" parent="android:Theme"></style>

	<style name="HomeButton">
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:drawablePadding">2dp</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:background">@null</item>
	</style>

	<style name="TableLabel">
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:gravity">right</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="StatRow">
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_standard</item>
		<item name="android:paddingRight">@dimen/padding_standard</item>
	</style>

	<style name="StatBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="drawable">@drawable/progress</item>
	</style>

	<style name="BodySeparator">
		<item name="android:layout_marginTop">@dimen/padding_standard</item>
		<item name="android:layout_marginBottom">@dimen/padding_standard</item>
		<item name="android:background">@android:drawable/divider_horizontal_bright</item>
	</style>

	<style name="StatsHeading">
		<item name="android:paddingLeft">@dimen/padding_standard</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
		<item name="android:paddingRight">@dimen/padding_small</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="StatsCount">
		<item name="android:gravity">right</item>
		<item name="android:paddingRight">@dimen/padding_standard</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_small</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="PollProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">18dp</item>
		<item name="android:progressDrawable">@drawable/progress</item>
	</style>

	<style name="PollProgressBarText">
		<item name="android:textSize">@dimen/text_size_xsmall</item>
		<item name="android:textColor">#fff</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="log_play_label" parent="android:Widget.TextView">
		<item name="android:paddingTop">@dimen/padding_standard</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingRight">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_small</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="log_play_value" parent="android:Widget.TextView">
		<item name="android:padding">@dimen/padding_standard</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="game_info" parent="android:Widget.TextView">
		<item name="android:layout_gravity">center_vertical|left</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">@dimen/padding_standard</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="game_info_table" parent="game_info">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="game_info_button" parent="android:Widget.ImageButton">
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="game_info_button_text" parent="android:Widget.TextView">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="Text" parent="@android:style/TextAppearance">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Text.Big">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Text.Primary" parent="Text.Big">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Secondary" parent="Text">
		<item name="android:textColor">@color/light_text</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="Text.Footnote">
		<item name="android:textSize">10sp</item>
	</style>

	<style name="RowContainer">
		<item name="android:gravity">center</item>
		<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
		<item name="android:padding">@dimen/padding_standard</item>
	</style>

	<style name="ImageList">
		<item name="android:layout_marginLeft">@dimen/padding_standard</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

</resources>