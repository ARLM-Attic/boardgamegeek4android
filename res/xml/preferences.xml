<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

	<PreferenceScreen android:title="@string/pref_search" >
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="exactSearch"
			android:summaryOff="@string/pref_exact_search_off"
			android:summaryOn="@string/pref_exact_search_on"
			android:title="@string/pref_exact_search" />
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="skipResults"
			android:summaryOff="@string/pref_skipResults_off"
			android:summaryOn="@string/pref_skipResults_on"
			android:title="@string/pref_skipResults" />

		<Preference
			android:key="globalSearch"
			android:summary="@string/pref_search_global_descr"
			android:title="@string/pref_search_global" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/pref_log" >
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="logPlay"
			android:title="@string/pref_log_play" />
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="quickLogPlay"
			android:title="@string/pref_log_play_quick" />
		<CheckBoxPreference
			android:key="logEditPlayer"
			android:summaryOff="@string/pref_edit_player_off"
			android:summaryOn="@string/pref_edit_player_on"
			android:title="@string/pref_edit_player" />

		<PreferenceCategory android:title="@string/pref_general" >
			<CheckBoxPreference
				android:defaultValue="false"
				android:key="logPlayQuantity"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_quantity" />
			<CheckBoxPreference
				android:defaultValue="false"
				android:key="logPlayLength"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_length" />
			<CheckBoxPreference
				android:defaultValue="false"
				android:key="logPlayLocation"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_location" />
			<CheckBoxPreference
				android:defaultValue="false"
				android:key="logPlayIncomplete"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_incomplete" />
			<CheckBoxPreference
				android:defaultValue="false"
				android:key="logPlayNoWinStats"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_no_win_stats" />
			<CheckBoxPreference
				android:defaultValue="false"
				android:key="logPlayComments"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_comments" />
			<CheckBoxPreference
				android:defaultValue="true"
				android:key="logPlayPlayerList"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_play_players" />
		</PreferenceCategory>
		<PreferenceCategory android:title="@string/pref_player_settings" >
			<CheckBoxPreference
				android:key="logPlayerTeamColor"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_player_team_color" />
			<CheckBoxPreference
				android:key="logPlayerPosition"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_player_position" />
			<CheckBoxPreference
				android:key="logPlayerScore"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_player_score" />
			<CheckBoxPreference
				android:key="logPlayerRating"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_player_rating" />
			<CheckBoxPreference
				android:key="logPlayerNew"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_player_new" />
			<CheckBoxPreference
				android:key="logPlayerWin"
				android:summaryOff="@string/pref_log_off"
				android:summaryOn="@string/pref_log_on"
				android:title="@string/pref_log_player_win" />
		</PreferenceCategory>
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/pref_sync" >
		<com.boardgamegeek.pref.ListPreferenceMultiSelect
			android:defaultValue="own"
			android:dialogTitle="@string/pref_sync_statuses"
			android:entries="@array/pref_sync_status_entries"
			android:entryValues="@array/pref_sync_status_values"
			android:key="syncStatuses"
			android:title="@string/pref_sync_statuses" />

		<CheckBoxPreference
			android:defaultValue="false"
			android:key="syncPlays"
			android:title="@string/pref_sync_plays" />
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="syncBuddies"
			android:title="@string/pref_sync_buddies" />
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="sync_notifications"
			android:title="@string/pref_sync_notifications" />

		<com.boardgamegeek.pref.ClearDialogPreference
			android:negativeButtonText="@string/cancel"
			android:positiveButtonText="@string/pref_sync_clear_pos"
			android:title="@string/pref_sync_clear" />

		<com.boardgamegeek.pref.ResetCollectionDialogPreference
			android:negativeButtonText="@string/cancel"
			android:positiveButtonText="@string/pref_sync_reset_pos"
			android:title="@string/pref_sync_reset_collection" />

		<com.boardgamegeek.pref.ResetPlaysDialogPreference
			android:negativeButtonText="@string/cancel"
			android:positiveButtonText="@string/pref_sync_reset_pos"
			android:title="@string/pref_sync_reset_plays" />
	</PreferenceScreen>
	<PreferenceScreen android:title="@string/pref_advanced" >
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="advancedDebugInsert"
			android:summaryOff="@string/pref_advanced_debug_inserts_off"
			android:summaryOn="@string/pref_advanced_debug_inserts_on"
			android:title="@string/pref_advanced_debug_inserts" />
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="advancedPolls"
			android:summaryOff="@string/pref_advanced_polls_off"
			android:summaryOn="@string/pref_advanced_polls_on"
			android:title="@string/pref_advanced_polls" />
		<CheckBoxPreference
			android:defaultValue="false"
			android:key="advancedNotifyErrors"
			android:summaryOff="@string/pref_advanced_notify_errors_off"
			android:summaryOn="@string/pref_advanced_notify_errors_on"
			android:title="@string/pref_advanced_notify_errors" />
	</PreferenceScreen>

</PreferenceScreen>