<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="User settings">
		<EditTextPreference android:key="username"
			android:title="BGG username" android:summary="BoardGameGeek.com username for logging plays"
			android:dialogTitle="BGG username" android:dialogMessage="Enter your BoardGameGeek.com username" />
		<EditTextPreference android:key="password"
			android:title="BGG password" android:summary="BoardGameGeek.com password for logging plays"
			android:dialogTitle="BGG password" android:dialogMessage="Enter your BoardGameGeek.com password"
			android:password="true" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_search">
		<CheckBoxPreference android:key="imageLoad"
			android:defaultValue="true" android:title="@string/pref_imageLoad_title"
			android:summary="@string/pref_imageLoad_summary" />
		<CheckBoxPreference android:key="exactSearch"
			android:defaultValue="true" android:title="@string/pref_exactSearch_title"
			android:summary="@string/pref_exactSearch_summary" />
		<CheckBoxPreference android:key="skipResults"
			android:defaultValue="true" android:title="@string/pref_skipResults_title"
			android:summary="@string/pref_skipResults_summary" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_database">
		<ListPreference android:key="databaseDuration"
			android:defaultValue="259200000" android:title="@string/pref_database_duration"
			android:summary="@string/pref_database_duration_summary"
			android:entries="@array/databaseDurationEntries" android:entryValues="@array/databaseDurationValues" />
		<ListPreference android:key="databaseDurationExtra"
			android:defaultValue="1209600000" android:title="@string/pref_database_duration_extra"
			android:summary="@string/pref_database_duration_extra_summary"
			android:entries="@array/databaseDurationEntries" android:entryValues="@array/databaseDurationValues" />
		<com.boardgamegeek.ClearDialogPreference
			android:key="clearDatabase" android:title="@string/pref_database_clear"
			android:summary="@string/pref_database_clear_summary"
			android:positiveButtonText="@string/pref_database_clear_pos"
			android:negativeButtonText="@string/pref_database_clear_neg" />
	</PreferenceCategory>
</PreferenceScreen>