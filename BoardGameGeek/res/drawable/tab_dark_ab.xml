<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Non focused states -->
	<item android:drawable="@android:color/transparent" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
	<item android:drawable="@drawable/tab_dark_selected" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>

	<!-- Focused states -->
	<item android:drawable="@drawable/item_focused" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
	<item android:drawable="@drawable/tab_dark_selected_focused" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>

	<!-- Pressed -->
	<!-- Non focused states -->
	<item android:drawable="@drawable/item_pressed" android:state_focused="false" android:state_pressed="true" android:state_selected="false"/>
	<item android:drawable="@drawable/tab_dark_selected_pressed" android:state_focused="false" android:state_pressed="true" android:state_selected="true"/>

	<!-- Focused states -->
	<item android:drawable="@drawable/item_focused" android:state_focused="true" android:state_pressed="true" android:state_selected="false"/>
	<item android:drawable="@drawable/tab_dark_selected_pressed" android:state_focused="true" android:state_pressed="true" android:state_selected="true"/>

</selector>