<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Text" parent="@android:style/TextAppearance">
		<item name="android:textIsSelectable">false</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Theme.bgglight.Dialog" parent="@android:style/Theme.Holo.Dialog" />

	<style name="Text.DrawerItem" parent="Text.Huge">
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/padding_extra</item>
		<item name="android:paddingRight">@dimen/padding_extra</item>
		<item name="android:textIsSelectable">false</item>
	</style>

	<style name="BottomButton" parent="@android:style/Widget.Holo.Button.Borderless">
		<item name="android:textColor">#000</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:maxLines">2</item>
	</style>

	<style name="BottomButtonBar" parent="@android:style/Holo.ButtonBar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:measureWithLargestChild">true</item>
	</style>

	<style name="BottomButtonDivider">
		<item name="android:background">?android:attr/dividerVertical</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_marginLeft">4dp</item>
		<item name="android:layout_marginRight">4dp</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="ActionBar">
		<item name="android:divider">?android:attr/dividerVertical</item>
		<item name="android:dividerPadding">12dp</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:showDividers">middle</item>
	</style>

</resources>