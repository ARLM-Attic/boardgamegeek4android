<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Base application theme is the default theme. -->
	<style name="Theme" parent="android:Theme"></style>

	<!-- Variation on the Light theme that turns off the title -->
	<style name="Theme.Bgg" parent="android:style/Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<!-- Variation on the Light theme that shows off the title -->
	<style name="Theme.BggTitle" parent="Theme.Bgg">
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<!-- The horizontal LinearLayout for the entire title bar -->
	<style name="TitleBar">
		<item name="android:id">@id/title_container</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">@dimen/title_height</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@drawable/gradient_title</item>
	</style>

	<!-- BGG icon for the left side of the title bar -->
	<style name="TitleBarLogo">
		<item name="android:id">@id/title_logo</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

	<style name="TitleBarText">
		<item name="android:id">@id/title_text</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:textColor">@color/title_text</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
	</style>

	<style name="TitleBarText.Big">
		<item name="android:textSize">@dimen/text_size_large</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TitleBarText.Small">
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:inputType">textMultiLine</item>
	</style>

	<!-- thin vertical line -->
	<style name="TitleBarSeparator">
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@color/background_light</item>
	</style>

	<!-- An button on the title bar -->
	<style name="TitleBarAction">
		<item name="android:layout_width">@dimen/title_height</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@drawable/title_button</item>
	</style>

	<style name="HomeButton">
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:drawablePadding">2dp</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:background">@null</item>
	</style>

	<style name="TableLabel">
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:gravity">right</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="StatRow">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">2dp</item>
	</style>

	<style name="StatBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="drawable">@drawable/progress</item>
	</style>

	<style name="BodySeparator">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1dip</item>
		<item name="android:layout_marginTop">@dimen/padding_standard</item>
		<item name="android:layout_marginBottom">@dimen/padding_standard</item>
		<item name="android:background">@android:drawable/divider_horizontal_bright</item>
	</style>

	<style name="StatsHeading">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="StatsCount">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="PollProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">18dp</item>
		<item name="android:progressDrawable">@drawable/progress</item>
	</style>

	<style name="PollProgressBarText">
		<item name="android:textSize">@dimen/text_size_xsmall</item>
		<item name="android:textColor">#fff</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="log_play_label" parent="android:Widget.TextView">
		<item name="android:paddingTop">@dimen/padding_standard</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingRight">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_small</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="log_play_value" parent="android:Widget.TextView">
		<item name="android:padding">@dimen/padding_standard</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="game_info" parent="android:Widget.TextView">
		<item name="android:layout_gravity">center_vertical|left</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">@dimen/padding_standard</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="game_info_table" parent="game_info">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="game_info_button" parent="android:Widget.ImageButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="game_info_button_text" parent="android:Widget.TextView">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<!-- New Sherlock-based themes -->

	<style name="Theme.BoardGameGeek" parent="Theme.Sherlock.Light.DarkActionBar">
		<item name="windowContentOverlay">@drawable/actionbar_shadow</item>
		<item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
		<item name="actionBarStyle">@style/Widget.BoardGameGeek.ActionBar</item>
		<item name="android:actionBarStyle">@style/Widget.BoardGameGeek.ActionBar</item>
		<item name="actionBarTabStyle">@style/Widget.BoardGameGeek.ActionBar.TabView</item>
		<item name="android:actionBarTabStyle">@style/Widget.BoardGameGeek.ActionBar.TabView</item>
		<item name="actionBarTabBarStyle">@style/Widget.BoardGameGeek.ActionBar.TabBar</item>
		<item name="android:actionBarTabBarStyle">@style/Widget.BoardGameGeek.ActionBar.TabBar</item>
		<item name="actionBarTabTextStyle">@style/Widget.BoardGameGeek.ActionBar.TabText</item>
		<item name="android:actionBarTabTextStyle">@style/Widget.BoardGameGeek.ActionBar.TabText</item>
	</style>

	<style name="Widget.BoardGameGeek.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
		<item name="background">@drawable/gradient_title</item>
		<item name="android:background">@drawable/gradient_title</item>
		<item name="displayOptions">useLogo|showHome|showTitle</item>
		<item name="android:displayOptions">useLogo|showHome|showTitle</item>
	</style>

	<style name="Widget.BoardGameGeek.ActionBar.TabBar" parent="Widget.Sherlock.Light.ActionBar.TabBar.Inverse">
		<item name="android:background">@color/background_light</item>
	</style>

	<style name="Widget.BoardGameGeek.ActionBar.TabText" parent="Widget.Sherlock.Light.ActionBar.TabText.Inverse">
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="Widget.BoardGameGeek.ActionBar.TabView" parent="Widget.Sherlock.Light.ActionBar.TabView.Inverse">
		<item name="android:background">@drawable/tab_dark_ab</item>
	</style>

</resources>