<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="RowSeparator" parent="TextAppearance.AppCompat.Menu">
		<item name="android:background">@color/background_dark</item>
		<item name="android:gravity">center</item>
		<item name="android:minHeight">32dp</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/text_inverse</item>
		<item name="android:textIsSelectable">false</item>
	</style>

	<style name="Text.Header">
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/accent</item>
	</style>

	<style name="DrawerList">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="DrawerItemContainer">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:gravity">center</item>
		<item name="android:minHeight">@dimen/drawer_item_height</item>
		<item name="android:paddingBottom">@dimen/material_margin_vertical</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">@dimen/material_margin_vertical</item>
	</style>

	<style name="DrawerItemContainer.Indent">
		<item name="android:paddingLeft">@dimen/material_indent_horizontal</item>
	</style>

	<style name="Text.DrawerItem" parent="TextAppearance.AppCompat.Subhead">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textIsSelectable">false</item>
	</style>

</resources>