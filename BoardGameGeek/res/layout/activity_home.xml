<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

	<include layout="@layout/titlebar" />

	<com.boardgamegeek.ui.widget.DashboardLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >

		<Button
			android:id="@+id/home_btn_collection"
			style="@style/HomeButton"
			android:drawableTop="@drawable/home_btn_collection"
			android:gravity="center"
			android:onClick="onCollectionClick"
			android:text="@string/home_btn_collection" />

		<Button
			android:id="@+id/home_btn_hotness"
			style="@style/HomeButton"
			android:drawableTop="@drawable/home_btn_hotness"
			android:onClick="onHotnessClick"
			android:text="@string/home_btn_hotness" />

		<Button
			android:id="@+id/home_btn_buddies"
			style="@style/HomeButton"
			android:drawableTop="@drawable/home_btn_buddies"
			android:onClick="onBuddiesClick"
			android:text="@string/home_btn_buddies" />

		<Button
			android:id="@+id/home_btn_forums"
			style="@style/HomeButton"
			android:drawableTop="@drawable/home_btn_forums"
			android:onClick="onForumsClick"
			android:text="@string/home_btn_forums" />

		<Button
			android:id="@+id/home_btn_plays"
			style="@style/HomeButton"
			android:drawableTop="@drawable/home_btn_plays"
			android:onClick="onPlaysClick"
			android:text="@string/home_btn_plays" />

		<Button
			android:id="@+id/home_btn_settings"
			style="@style/HomeButton"
			android:drawableTop="@drawable/home_btn_settings"
			android:onClick="onSettingsClick"
			android:text="@string/home_btn_settings" />
	</com.boardgamegeek.ui.widget.DashboardLayout>

</LinearLayout>