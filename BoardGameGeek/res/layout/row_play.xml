<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/separator"
		style="@style/RowSeparator"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:visibility="gone" />

	<RelativeLayout
		style="@style/RowContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:id="@+id/list_name"
			style="@style/Text.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/list_location"
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/list_name"
			android:layout_gravity="right"
			android:layout_toLeftOf="@+id/list_date"
			android:paddingRight="@dimen/padding_extra"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/list_date"
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/list_name"
			android:layout_gravity="right"
			android:textIsSelectable="false" />

		<TextView
			android:id="@+id/list_status"
			style="@style/Text.Footnote2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/list_location"
			android:layout_gravity="right"
			android:textIsSelectable="false" />
	</RelativeLayout>

</LinearLayout>