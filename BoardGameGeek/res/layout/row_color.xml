<?xml version="1.0" encoding="utf-8"?>
<com.boardgamegeek.ui.widget.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/RowContainer"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/checkable_background" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/color_name"
			style="@style/Text.Primary"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:padding="@dimen/padding_standard" />

		<FrameLayout
			android:layout_width="@dimen/dropdownitem_min_height"
			android:layout_height="@dimen/dropdownitem_min_height"
			android:layout_gravity="center_vertical" >

			<ImageView
				android:id="@+id/color_view"
				android:layout_width="@dimen/color_circle_diameter"
				android:layout_height="@dimen/color_circle_diameter"
				android:layout_gravity="center"
				android:scaleType="fitXY" />
		</FrameLayout>
	</LinearLayout>

</com.boardgamegeek.ui.widget.CheckableFrameLayout>