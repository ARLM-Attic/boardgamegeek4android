<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fillViewport="true" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="vertical"
		android:paddingBottom="@dimen/padding_standard"
		android:paddingLeft="@dimen/padding_extra"
		android:paddingRight="@dimen/padding_extra"
		android:paddingTop="@dimen/padding_standard" >

		<TableLayout
			android:id="@+id/details"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="1,2" >

			<TableRow
				android:paddingBottom="@dimen/padding_small"
				android:paddingTop="@dimen/padding_small" >

				<TextView
					style="@style/TextLabel.Edit"
					android:text="@string/on" />

				<Button
					android:id="@+id/log_play_date"
					android:layout_span="3"
					android:gravity="left|center_vertical"
					android:onClick="onDateClick" />
			</TableRow>

			<TableRow
				android:id="@+id/log_play_location_root"
				android:paddingBottom="@dimen/padding_small"
				android:paddingTop="@dimen/padding_small" >

				<TextView
					style="@style/TextLabel.Edit"
					android:text="@string/at" />

				<AutoCompleteTextView
					android:id="@+id/log_play_location"
					android:layout_span="3"
					android:completionThreshold="1"
					android:hint="@string/location_hint"
					android:imeOptions="actionNext"
					android:inputType="textCapWords"
					android:textColor="#000" />
			</TableRow>

			<TableRow
				android:id="@+id/log_play_length_quantity_root"
				android:paddingBottom="@dimen/padding_small"
				android:paddingTop="@dimen/padding_small" >

				<TextView
					android:id="@+id/log_play_length_label"
					style="@style/TextLabel.Edit"
					android:text="@string/for_" />

				<EditText
					android:id="@+id/log_play_length"
					android:hint="@string/length_hint"
					android:inputType="number" />

				<EditText
					android:id="@+id/log_play_quantity"
					android:hint="@string/quantity_hint"
					android:inputType="number" />

				<TextView
					android:id="@+id/log_play_quantity_label"
					style="@style/TextLabel.Edit.Right"
					android:text="@string/times" />
			</TableRow>

			<TableRow
				android:id="@+id/log_play_incomplete_root"
				android:paddingBottom="@dimen/padding_small"
				android:paddingTop="@dimen/padding_small" >

				<CheckBox
					android:id="@+id/log_play_incomplete"
					style="@style/Text.CheckboxLabel"
					android:layout_column="1"
					android:layout_span="3"
					android:checked="false"
					android:text="@string/incomplete" />
			</TableRow>

			<TableRow
				android:id="@+id/log_play_no_win_stats_root"
				android:paddingBottom="@dimen/padding_small"
				android:paddingTop="@dimen/padding_small" >

				<CheckBox
					android:id="@+id/log_play_no_win_stats"
					style="@style/Text.CheckboxLabel"
					android:layout_column="1"
					android:layout_span="3"
					android:checked="false"
					android:text="@string/noWinStats" />
			</TableRow>
		</TableLayout>

		<TextView
			android:id="@+id/log_play_comments_label"
			style="@style/Text.Header.Underline"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/comments" />

		<EditText
			android:id="@+id/log_play_comments"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/comments_hint"
			android:inputType="textMultiLine|textAutoCorrect|textCapSentences" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingTop="@dimen/padding_standard" >

			<TextView
				android:id="@+id/log_play_players_label"
				style="@style/Text.Header.Underline"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="0dp"
				android:text="@string/title_players" />

			<TextView
				android:id="@+id/log_play_players_add"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:clickable="true"
				android:contentDescription="@string/add"
				android:drawableRight="@drawable/ic_action_add_light"
				android:gravity="center_vertical"
				android:onClick="onAddPlayerClick"
				android:textIsSelectable="false" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/log_play_player_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:animateLayoutChanges="true"
			android:gravity="top"
			android:orientation="vertical" />
	</LinearLayout>

</ScrollView>