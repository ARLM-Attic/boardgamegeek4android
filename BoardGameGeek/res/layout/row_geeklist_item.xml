<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/RowContainer"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center" >

    <LinearLayout
        android:id="@+id/game_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnail"
            style="@style/ImageList"
            android:layout_width="@dimen/thumbnail_list_size"
            android:layout_height="@dimen/thumbnail_list_size"
            android:contentDescription="@string/thumbnail"
            android:src="@drawable/thumbnail_image_empty" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/game_name"
                style="@style/Text.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false" />
        </LinearLayout>
    </LinearLayout>

	<TextView
		android:id="@+id/geeklist_item_username"
		style="@style/Text.Secondary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_below="@+id/game_section"
		android:ellipsize="end"
		android:textIsSelectable="false" />

    <TextView
        android:id="@+id/geeklist_item_posted_date"
        style="@style/Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geeklist_item_username"
        android:paddingBottom="@dimen/padding_small"
        android:textIsSelectable="false" />

	<TextView
		android:id="@+id/geeklist_item_edited_date"
		style="@style/Text.Secondary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/geeklist_item_posted_date"
		android:paddingBottom="@dimen/padding_small"
		android:textIsSelectable="false" />

	<WebView
		android:id="@+id/geeklist_item_body"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/geeklist_item_edited_date"
		android:textIsSelectable="true" />

</RelativeLayout>