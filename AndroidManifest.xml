<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.boardgamegeek" android:versionCode="14"
	android:versionName="2.3 beta">
	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<meta-data android:name="android.app.default_searchable"
			android:value=".view.BoardGameListView" />

		<activity android:name=".BoardGameGeek" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".view.BoardGameListView"
			android:configChanges="keyboardHidden|orientation" android:label="@string/search_results"
			android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>
		<activity android:name=".view.BoardGameView" android:label="@string/app_name" />
		<activity android:name=".view.BoardGameStatsTab" />
		<activity android:name=".view.BoardGameExtraTab" />
		<activity android:name=".view.BoardGameLinksTab" />
		<activity android:name=".view.BoardGamePollsTab" />
		<activity android:name=".Preferences" android:label="@string/app_name" />
		<provider android:authorities="com.boardgamegeek.provider"
			android:name=".BoardGameGeekProvider" />
	</application>
</manifest>