<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="StatRow">
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
	</style>

	<style name="StatBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="drawable">@drawable/progress</item>
	</style>

	<style name="BodySeparator">
		<item name="android:layout_marginTop">@dimen/padding_standard</item>
		<item name="android:layout_marginBottom">@dimen/padding_standard</item>
		<item name="android:background">@android:drawable/divider_horizontal_bright</item>
	</style>

	<style name="StatsCount">
		<item name="android:gravity">right</item>
		<item name="android:paddingLeft">@dimen/padding_small</item>
		<item name="android:textColor">#000</item>
	</style>

	<style name="Button.Info" parent="android:Widget.ImageButton">
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="Text.InfoButton">
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="Text.Info">
		<item name="android:layout_gravity">center_vertical|left</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:drawablePadding">@dimen/padding_half</item>
		<item name="android:layout_height">@dimen/edit_row_height</item>
	</style>

	<style name="Text.Info.Table">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="Text" parent="@android:style/TextAppearance">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Text.NumberStat">
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="Text.NumberStatLabel">
		<item name="android:paddingLeft">@dimen/padding_standard</item>
	</style>

	<style name="Text.Big">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Text.Huge">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Text.Primary" parent="Text.Big">
		<item name="android:textStyle">bold</item>
		<item name="android:lineSpacingMultiplier">0.9</item>
	</style>

	<style name="Text.Secondary">
		<item name="android:textColor">@color/light_text</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="Text.Footnote">
		<item name="android:textSize">10sp</item>
	</style>

	<style name="Text.Footnote2">
		<item name="android:textColor">@color/light_text</item>
		<item name="android:textSize">10sp</item>
	</style>

	<style name="Text.Dialog">
		<item name="android:textColor">@color/dialog_text</item>
	</style>

	<style name="Text.DialogHeader">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/dialog_text</item>
	</style>

	<style name="Text.Title">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Subtitle">
		<item name="android:textColor">@color/light_text</item>
	</style>

	<style name="Text.Label">
		<item name="android:paddingTop">@dimen/padding_standard</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingRight">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_small</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Label.Dialog">
		<item name="android:textColor">@color/dialog_text</item>
	</style>

	<style name="Text.DrawerItem" parent="Text.Big">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/padding_standard</item>
		<item name="android:paddingRight">@dimen/padding_standard</item>
	</style>

	<style name="DrawerItemContainer">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:minHeight">@dimen/drawer_item_height</item>
		<item name="android:paddingBottom">@dimen/padding_standard</item>
		<item name="android:paddingLeft">@dimen/padding_standard</item>
		<item name="android:paddingRight">@dimen/padding_standard</item>
		<item name="android:paddingTop">@dimen/padding_standard</item>
	</style>

	<style name="RowContainer">
		<item name="android:gravity">center</item>
		<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
		<item name="android:paddingBottom">@dimen/padding_standard</item>
		<item name="android:paddingLeft">@dimen/padding_standard</item>
		<item name="android:paddingRight">@dimen/padding_standard</item>
		<item name="android:paddingTop">@dimen/padding_standard</item>
	</style>

	<style name="RowContainer.WithThumbnail">
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingTop">0dp</item>
	</style>

	<style name="RowContainer.Medium">
		<item name="android:minHeight">56dp</item>
	</style>

	<style name="RowContainer.Tall">
		<item name="android:minHeight">72dp</item>
	</style>

	<style name="RowContainer.VeryTall">
		<item name="android:minHeight">88dp</item>
	</style>

	<style name="RowSeparator">
		<item name="android:background">@color/primary_dark</item>
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/padding_extra</item>
		<item name="android:paddingRight">@dimen/padding_extra</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ImageList">
		<item name="android:layout_marginRight">@dimen/padding_standard</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="InfoSection">
		<item name="android:background">@drawable/grey_frame_on_white_b</item>
		<item name="android:layout_marginBottom">@dimen/padding_standard</item>
		<item name="android:padding">@dimen/padding_standard</item>
	</style>

	<style name="InfoSectionContinued">
		<item name="android:background">#fff</item>
		<item name="android:paddingLeft">@dimen/padding_standard</item>
		<item name="android:paddingRight">@dimen/padding_standard</item>
	</style>

	<style name="Text.Header">
		<item name="android:textColor">@color/accent</item>
	</style>

	<style name="Text.Header.Underline">
		<item name="android:background">@drawable/underline</item>
	</style>

	<style name="Text.Header.Expandable">
		<item name="android:drawableRight">@drawable/expander_open</item>
		<item name="android:paddingRight">0dp</item>
	</style>

	<style name="Text.Header2">
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingTop">@dimen/padding_small</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Overlay">
		<item name="android:textColor">#fff</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
	</style>

	<style name="Text.Title.Overlay">
		<item name="android:textColor">#fff</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">3</item>
	</style>

	<style name="Text.Footnote.Overlay">
		<item name="android:textColor">#fff</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>

	<style name="LoginFormContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="TextLabel" parent="@style/Text.Secondary">
		<item name="android:minWidth">48dp</item>
		<item name="android:paddingRight">@dimen/padding_extra</item>
		<item name="android:gravity">right|center_vertical</item>
	</style>

	<style name="TextLabel.Right">
		<item name="android:gravity">left</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:paddingLeft">@dimen/padding_standard</item>
	</style>

	<style name="Theme.bgglight.Dialog" parent="@android:style/Theme.Dialog"/>

	<style name="BottomButton">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:maxLines">2</item>
	</style>

	<style name="BottomButtonBar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="BottomButtonDivider">
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:visibility">gone</item>
	</style>

	<style name="ActionBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">?attr/colorPrimary</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
	</style>

	<style name="ActionBarButtonContainer">
		<item name="android:divider">?android:attr/dividerVertical</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="ActionBarButton" parent="android:style/Widget.Holo.Light.ActionButton">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:focusable">true</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="ActionBarButtonImage">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="ActionBarButtonText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
		<item name="android:textColor">#000000</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">none</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="DrawerListContainer">
		<item name="android:layout_width">@dimen/drawer_width</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">start</item>
		<item name="android:background">@android:color/white</item>
	</style>

	<style name="DrawerList">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:divider">?android:dividerHorizontal</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="HeroContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">128dp</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="HeroImage">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="HeroOverlay">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/black_overlay</item>
	</style>

	<style name="RatingLarge" parent="@style/Text.Title">
		<item name="android:paddingBottom">@dimen/padding_half</item>
		<item name="android:paddingLeft">@dimen/padding_extra</item>
		<item name="android:paddingRight">@dimen/padding_extra</item>
		<item name="android:paddingTop">@dimen/padding_half</item>
	</style>

	<style name="FormContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingBottom">@dimen/padding_small</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:paddingTop">@dimen/padding_standard</item>
	</style>

	<style name="FormRowContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/edit_row_height</item>
		<item name="android:orientation">horizontal</item>
	</style>

</resources>