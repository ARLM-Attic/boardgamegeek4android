<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ActionBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">?attr/colorPrimary</item>
		<item name="android:elevation">@dimen/material_elevation</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
	</style>

	<style name="InfoBar">
		<item name="android:layout_marginBottom">@dimen/padding_standard</item>
		<item name="android:paddingLeft">@dimen/material_margin_horizontal</item>
		<item name="android:paddingRight">@dimen/material_margin_horizontal</item>
		<item name="android:elevation">@dimen/material_elevation_subtle</item>
		<item name="android:background">@color/info_background</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:gravity">center</item>
	</style>
</resources>