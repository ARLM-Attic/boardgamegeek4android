<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	style="@style/Card"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:showIn="@layout/fragment_game">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/game_info_links_root"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/selectableItemBackground"
			android:descendantFocusability="blocksDescendants"
			android:gravity="center_vertical"
			android:minHeight="@dimen/card_row_height"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/icon_links"
				style="@style/Icon"
				android:src="@drawable/ic_action_link"/>

			<TextView
				android:id="@+id/game_links_label"
				style="@style/Text"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="@string/links"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/game_links_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone"
			tools:visibility="visible">

			<LinearLayout
				android:id="@+id/link_bgg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:descendantFocusability="blocksDescendants"
				android:gravity="center_vertical"
				android:minHeight="@dimen/edit_row_height"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/icon_link_bgg"
					style="@style/Icon"
					android:src="@drawable/ic_action_globe"/>

				<TextView
					style="@style/Text"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:text="@string/link_bgg"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/link_bg_prices"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:descendantFocusability="blocksDescendants"
				android:gravity="center_vertical"
				android:minHeight="@dimen/edit_row_height"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/icon_link_bg_prices"
					style="@style/Icon"
					android:src="@drawable/ic_action_local_atm"/>

				<TextView
					style="@style/Text"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:text="@string/link_bg_prices"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/link_amazon"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:descendantFocusability="blocksDescendants"
				android:gravity="center_vertical"
				android:minHeight="@dimen/edit_row_height"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/icon_link_amazon"
					style="@style/Icon"
					android:src="@drawable/ic_action_amazon"/>

				<TextView
					style="@style/Text"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:text="@string/link_amazon"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/link_ebay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:descendantFocusability="blocksDescendants"
				android:gravity="center_vertical"
				android:minHeight="@dimen/edit_row_height"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/icon_link_ebay"
					style="@style/Icon"
					android:src="@drawable/ic_action_local_grocery_store"/>

				<TextView
					style="@style/Text"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:maxLines="1"
					android:text="@string/link_ebay"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>