<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	android:id="@+id/root_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v4.widget.ContentLoadingProgressBar
		android:id="@android:id/progress"
		style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center"/>

	<TextView
		android:id="@android:id/empty"
		style="@style/EmptyMessage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:text="@string/empty_forum"
		android:visibility="gone"/>

	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:recyclerviewfastscroller="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.v7.widget.RecyclerView
			android:id="@android:id/list"
			style="@style/RecyclerViewVerticalList"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"/>

		<xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
			android:id="@+id/fast_scroller"
			android:layout_width="24dp"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:paddingEnd="@dimen/margin_small"
			android:paddingRight="@dimen/margin_small"
			recyclerviewfastscroller:rfs_barColor="@color/accent"
			recyclerviewfastscroller:rfs_handleBackground="@drawable/fast_scroller_handle"/>
	</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>