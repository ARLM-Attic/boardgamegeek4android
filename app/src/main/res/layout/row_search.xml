<?xml version="1.0" encoding="UTF-8"?>
<com.boardgamegeek.ui.widget.ForegroundLinearLayout style="@style/RowContainer.Tall"
													xmlns:android="http://schemas.android.com/apk/res/android"
													xmlns:tools="http://schemas.android.com/tools"
													android:layout_width="match_parent"
													android:layout_height="wrap_content"
													android:background="@drawable/activatable_background"
													android:foreground="?android:attr/selectableItemBackground">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical">

		<TextView
			android:id="@+id/name"
			style="@style/Text.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			tools:text="Ticket to Ride"/>

		<TextView
			android:id="@+id/year"
			style="@style/Text.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/name"
			tools:text="2004"/>

		<TextView
			android:id="@+id/game_id"
			style="@style/Text.Secondary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/year"
			android:layout_alignParentRight="true"
			tools:text="ID: 13"/>
	</RelativeLayout>

</com.boardgamegeek.ui.widget.ForegroundLinearLayout>