<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/primary"
	android:orientation="vertical">

	<ImageView
		android:layout_width="@dimen/drawer_header_image_size"
		android:layout_height="@dimen/drawer_header_image_size"
		android:layout_marginBottom="@dimen/material_margin_vertical"
		android:layout_marginLeft="@dimen/material_margin_horizontal"
		android:layout_marginTop="@dimen/padding_extra"
		android:elevation="@dimen/drawer_header_image_elevation"
		android:src="@drawable/person_image_empty"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:gravity="center_vertical"
		android:minHeight="@dimen/drawer_header_account_height"
		android:orientation="vertical"
		android:paddingLeft="@dimen/material_margin_horizontal"
		android:paddingRight="@dimen/material_margin_horizontal">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Chris Comeaux"
			android:textAppearance="@style/Text.Primary.DrawerHeader"
			tools:text="Chris Comeaux"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="ccomeaux"
			android:textAppearance="@style/Text.Secondary.DrawerHeader"
			tools:text="ccomeaux"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/list_divider"/>
</LinearLayout>