<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/material_margin_vertical"
	android:paddingLeft="@dimen/material_margin_horizontal"
	android:paddingRight="@dimen/material_margin_horizontal"
	android:paddingTop="@dimen/material_margin_vertical"
	android:stretchColumns="1" >

	<TableRow>

		<TextView
			style="@style/TextLabel.Edit"
			android:text="@string/pref_sync_timestamps_collection_full" />

		<TextView android:id="@+id/sync_timestamp_collection_full" />
	</TableRow>

	<TableRow>

		<TextView
			style="@style/TextLabel.Edit"
			android:text="@string/pref_sync_timestamps_collection_partial" />

		<TextView android:id="@+id/sync_timestamp_collection_partial" />
	</TableRow>

	<TableRow>

		<TextView
			style="@style/TextLabel.Edit"
			android:text="@string/pref_sync_timestamps_buddy" />

		<TextView android:id="@+id/sync_timestamp_buddy" />
	</TableRow>

	<TableRow>

		<TextView
			style="@style/TextLabel.Edit"
			android:text="@string/pref_sync_timestamps_plays_newest_date" />

		<TextView android:id="@+id/sync_timestamp_plays_newest_date" />
	</TableRow>

	<TableRow>

		<TextView
			style="@style/TextLabel.Edit"
			android:text="@string/pref_sync_timestamps_plays_oldest_date" />

		<TextView android:id="@+id/sync_timestamp_plays_oldest_date" />
	</TableRow>

</TableLayout>